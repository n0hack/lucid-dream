---
import { Footer, Header } from '@components/common';
import '@styles/global.css';

type Props = {
  pageTitle: string;
  headerHasBg?: boolean;
};

const { pageTitle, headerHasBg = false } = Astro.props;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <meta name="generator" content={Astro.generator} />

    <title>{pageTitle}</title>
  </head>
  <body>
    <Header hasBg={headerHasBg} />
    <main class="min-h-[calc(100%-164px)] desktop:min-h-[calc(100%-208px)]">
      <slot />
    </main>
    <Footer />
  </body>
</html>
