---
type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

<ul class="flex flex-wrap gap-2 lg:gap-3">
  {
    tags.map((tag) => (
      <li>
        <a
          class="flex h-11 items-center rounded-md bg-gray-100 px-5 text-gray-600 hover:bg-primary hover:text-white lg:h-12 lg:px-6"
          href={`/tag/${tag}`}
          title={`${tag} 태그를 가진 스토리 보러가기`}
          aria-label={`${tag} 태그를 가진 스토리 보러가기`}
        >
          {tag}
        </a>
      </li>
    ))
  }
</ul>
