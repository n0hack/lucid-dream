  <HomeMainImage />
  <HomeProjectSection>
    <HomeProjectSlider projects={projects} client:only />
  </HomeProjectSection>
  <HomeStorySection>
    <HomeStorySlider stories={stories} client:only />
  </HomeStorySection>
</MainLayout>
